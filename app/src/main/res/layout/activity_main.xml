<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Connessione -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/ip_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="IP Address (es: 192.168.1.100)"
                android:text="127.0.0.1" />

            <Button
                android:id="@+id/connect_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connetti" />
        </LinearLayout>

        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Non connesso"
            android:layout_marginBottom="20dp" />

        <!-- Strip (Input) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STRIP (Input)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include layout="@layout/strip_control"
                android:id="@+id/strip_0" />
            <include layout="@layout/strip_control"
                android:id="@+id/strip_1" />
            <include layout="@layout/strip_control"
                android:id="@+id/strip_2" />
            <include layout="@layout/strip_control"
                android:id="@+id/strip_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include layout="@layout/strip_control"
                android:id="@+id/strip_4" />
            <include layout="@layout/strip_control"
                android:id="@+id/strip_5" />
            <include layout="@layout/strip_control"
                android:id="@+id/strip_6" />
            <include layout="@layout/strip_control"
                android:id="@+id/strip_7" />
        </LinearLayout>

        <!-- Bus (Output) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUS (Output)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include layout="@layout/bus_control"
                android:id="@+id/bus_0" />
            <include layout="@layout/bus_control"
                android:id="@+id/bus_1" />
            <include layout="@layout/bus_control"
                android:id="@+id/bus_2" />
            <include layout="@layout/bus_control"
                android:id="@+id/bus_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include layout="@layout/bus_control"
                android:id="@+id/bus_4" />
            <include layout="@layout/bus_control"
                android:id="@+id/bus_5" />
            <include layout="@layout/bus_control"
                android:id="@+id/bus_6" />
            <include layout="@layout/bus_control"
                android:id="@+id/bus_7" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>