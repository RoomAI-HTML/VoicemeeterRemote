{
    "name": "Android Development",
    "image": "mcr.microsoft.com/devcontainers/java:11",
    "features": {
        "ghcr.io/devcontainers/features/android-sdk:1": {
            "version": "latest"
        }
    },
    "postCreateCommand": "chmod +x gradlew",
    "forwardPorts": [8080],
    "customizations": {
        "vscode": {
            "extensions": [
                "vscjava.vscode-java-pack"
            ]
        }
    }
}